// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  content     String
  videoId     String?
  createdById String
  comments    Comment[]
}

model Comment {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  content     String
  createdById String
  postId      String
  post        Post     @relation(fields: [postId], references: [id], onDelete: NoAction)

  parentId String?
  parent   Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: NoAction)
  comments Comment[] @relation("CommentToComment")

  @@map("comments")
}
